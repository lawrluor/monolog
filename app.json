{
  "expo": {
    "name": "Monist",
    "slug": "monist",
    "version": "1.0.6",
    "orientation": "portrait",
    "icon": "./assets/icons/icon.png",

    "splash": {
      "image": "./assets/img/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "transparent"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": false,
          "speechRecognitionPermission": "Allow $(PRODUCT_NAME) to securely recognize user speech to generate transcripts that you can edit later.",
          "microphone": false,
          "speechRecognition": false
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.monist.monist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.monist.monist"
    },
    "web": {
      "favicon": "./assets/img/favicon.png"
    }
  }
}
